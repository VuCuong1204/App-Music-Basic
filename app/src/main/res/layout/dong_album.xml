<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:background="@drawable/custom_background_phatnhac"
        android:orientation="vertical"
        android:id="@+id/linearcarviewalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/imageviewalbum"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <TextView
            android:textColor="@color/black"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:text="Nhac tre hay nhat"
            android:textSize="20dp"
            android:maxLines="1"
            android:id="@+id/textviewalbum"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#65000000"
            android:textSize="15sp"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:text="Sơn Tùng MTP"
            android:maxLines="1"
            android:id="@+id/textviewcasialbum"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>