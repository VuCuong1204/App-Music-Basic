<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="#0D3B8EB3"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageviewallalbum"
            android:layout_width="200dp"
            android:layout_height="180dp"/>
    <TextView
        android:textColor="#FF00"
        android:ellipsize="end"
        android:maxLines="2"
        android:lines="2"
        android:textSize="15dp"
        android:textStyle="bold"
        android:maxWidth="200dp"
        android:gravity="left"
        android:text="Nhac viet hot nhat trong ngay"
        android:id="@+id/textviewallalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:text="Various Artists"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>