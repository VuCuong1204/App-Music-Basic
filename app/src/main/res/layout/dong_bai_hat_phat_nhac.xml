<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="1"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_margin="10dp"
        android:id="@+id/textviewphatnhacindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Ten ca khuc"
        android:textColor="@color/white"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:layout_toRightOf="@id/textviewphatnhacindex"
        android:layout_marginLeft="10dp"
        android:id="@+id/textviewphatnhactenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textviewphatnhactencasi"
        android:layout_below="@id/textviewphatnhactenbaihat"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:text="Ca si"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_toRightOf="@id/textviewphatnhacindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</RelativeLayout>