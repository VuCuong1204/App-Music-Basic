<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_margin="8dp"
        android:gravity="center"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardviewimgsearchbaihat"
        android:layout_height="60dp">
    <ImageView
        android:id="@+id/imageviewsearchbaihat"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:text="Ten bai hat"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/textviewsearchbaihat"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/cardviewimgsearchbaihat"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Ca si"
        android:textColor="#4A815050"
        android:textSize="18sp"
        android:layout_below="@id/textviewsearchbaihat"
        android:id="@+id/textviewsearchcasi"
        android:layout_marginLeft="8dp"
       android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/cardviewimgsearchbaihat"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageviewsearchluotthich"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/iconlove"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>