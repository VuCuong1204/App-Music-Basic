<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardCornerRadius="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <LinearLayout
       android:background="@drawable/custom_background_phatnhac"
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <FrameLayout
           android:id="@+id/framelayouttheloaitheochude"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:scaleType="centerCrop"
               android:id="@+id/imageviewtheloaitheochude"
               android:layout_width="180dp"
               android:layout_height="180dp"/>
       </FrameLayout>
       <TextView
           android:lines="1"
           android:maxWidth="200dp"
           android:text="Nhac viet hot nhat"
           android:textColor="@color/black"
           android:textSize="15dp"
           android:textStyle="bold"
           android:gravity="left"
           android:ellipsize="end"
           android:id="@+id/textviewtentheloaitheochude"
           android:paddingRight="5dp"
           android:layout_marginLeft="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:layout_marginTop="5dp"
           android:text="various Artists"
           android:textSize="13dp"
           android:textColor="#57654242"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>

</androidx.cardview.widget.CardView>