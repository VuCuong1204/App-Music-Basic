<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
<RelativeLayout
    android:background="@drawable/custom_danh_sach_phat_nhac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_margin="15dp"
        android:text="1"
        android:textSize="20dp"
        android:id="@+id/textviewdanhsachindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Ten ca khuc"
        android:textStyle="bold"
        android:textSize="20dp"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/textviewtenbaihat"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/textviewdanhsachindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@id/textviewdanhsachindex"
        android:id="@+id/textviewtencasi"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:textColor="#74855959"
        android:textSize="20dp"
        android:text="Ca si"
        android:layout_below="@id/textviewtenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewluotthichdanhsachbaihat"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>