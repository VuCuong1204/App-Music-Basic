<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_trinhphat_nhac"
    android:orientation="vertical"
    tools:context=".TrinhphatnhacActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarphatnhac"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerphatnhac"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"></androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:background="@drawable/custom_background_banner"
       android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:id="@+id/textviewtimesong"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="00:00"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/seekbarphatnhac"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textviewtotaltimsong"
                android:textColor="@color/white"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="00:00"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_marginRight="15dp"
                android:id="@+id/imagebuttonsuffle"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:scrollbarSize="10dp"
                android:src="@drawable/iconsuffle" />

            <ImageButton
                android:id="@+id/imagebuttonpre"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconpreview" />

            <ImageButton
                android:id="@+id/imagebuttonplay"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconplay" />

            <ImageButton
                android:id="@+id/imagebuttonnext"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconnext" />

            <ImageButton
                android:id="@+id/imagebuttonrepeat"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconrepeat" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>